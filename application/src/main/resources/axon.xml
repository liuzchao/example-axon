<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:axon="http://www.axonframework.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core.xsd">

    <axon:annotation-config/>

    <axon:event-bus id="eventBus"/>

    <axon:command-bus id="commandBus"/>

    <bean class="org.axonframework.commandhandling.gateway.CommandGatewayFactoryBean">
        <property name="commandBus" ref="commandBus"/>
    </bean>

    <bean class="org.axonframework.eventhandling.scheduling.java.SimpleEventSchedulerFactoryBean">
        <property name="eventBus" ref="eventBus"/>
    </bean>

    <axon:filesystem-event-store id="eventStore"
                                 base-dir="${application.axon.eventStore.baseDir}"/>

    <axon:saga-manager
            event-bus="eventBus"
            base-package="example.conference"/>

    <axon:event-sourcing-repository id="orderRepository"
                                    event-store="eventStore"
                                    event-bus="eventBus"
                                    aggregate-type="example.conference.registrations.domain.Order"/>

    <axon:event-sourcing-repository id="seatsAvailabilityRepository"
                                    event-store="eventStore"
                                    event-bus="eventBus"
                                    aggregate-type="example.conference.registrations.domain.SeatsAvailability"/>

    <axon:event-sourcing-repository id="paymentRepository"
                                    event-store="eventStore"
                                    event-bus="eventBus"
                                    aggregate-type="example.conference.payments.domain.Payment"/>

</beans>
